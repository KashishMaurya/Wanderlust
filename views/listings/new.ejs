<!-- Create new listing -->

<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create new listing</h3>
    <br />
    <form
      method="post"
      action="/listings/new"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
    <!-- enctype="multipart/form-data" :- When you make a POST request, you have to encode the data that forms the body of the request in some way.
       It is specifically used when file uploading is required in HTML form. 
       It sends the form data to server in multiple parts because of large size of file. -->

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          placeholder="title"
          class="form-control"
          name="listing[title]"
          type="text"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          placeholder="create a small description"
          name="listing[description]"
          type="text"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input class="form-control" name="listing[image]" type="file" />
      </div>

      <div class="row">

        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            placeholder="enter price"
            class="form-control"
            name="listing[price]"
            type="number"
            required
          />
          <div class="invalid-feedback">Enter a valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            placeholder="enter country name"
            class="form-control"
            name="listing[country]"
            type="text"
            required
          />
          <div class="invalid-feedback">Please enter a valid country name</div>
        </div>

      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          placeholder="loaction name"
          class="form-control"
          name="listing[location]"
          type="text"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <br />
      <button class="btn btn-dark add-btn">Submit</button>
    </form>
  </div>
</div>